{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "CommonJS",
        "target": "ES2019",
        "esModuleInterop": true,
        "allowJs": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
        "@controllers/*": ["./src/controllers/*"],
        "@core/*": ["./src/core/*"],
        "@infra/*": ["./src/infra/*"],
        "@adapter/*": ["./src/adapter/*"],
        "@utils/*": ["./src/utils/*"]
        }
    },
}